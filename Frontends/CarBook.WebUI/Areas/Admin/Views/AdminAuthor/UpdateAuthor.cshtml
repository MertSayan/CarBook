@model UpdateAuthorDto

@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Yazarlarla ilgili güncelleme işleminin gerçekleşeceği sayfadır. Yazar güncellemesi yaparken bilgileri eksiksiz girmeye özen gösterelim.
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="AuthorId"/>
                            <div class="form-group">
                                <label for="exampleInputName">Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Yazar adını giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputImageUrl">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Yazarın görselinin url sini giriniz.">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

