@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Banner Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            About alanına veri girişini aşağıdaki alandan yapabilirsiniz. tasarımda bozulma olmaması için yeni bir about girişi yaptıktan
                            sonra önceki about alanını silin, sadece 1 tane about verisi kalmalıdır.
                        </p>

                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlığı giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" asp-for="description" placeholder="Açıklamayı giriniz"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputImageUrl">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="imageUrl" placeholder=" Hakkımda kapak fotoğraf linkini giriniz">
                            </div>

                            

                            <button type="submit" class="btn btn-primary waves-effect waves-light">About bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



