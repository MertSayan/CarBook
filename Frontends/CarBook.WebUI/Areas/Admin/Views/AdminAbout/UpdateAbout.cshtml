@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni About Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            About alanına veri girişini aşağıdaki alandan yapabilirsiniz. tasarımda bozulma olmaması için yeni bir About girişi yaptıktan
                            sonra önceki About alanını silin, sadece 1 tane About verisi kalmalıdır.
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="aboutId" />
                            
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlığı giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" asp-for="description" placeholder="Açıklamayı giriniz"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputimageUrl">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="imageUrl" placeholder="hakkımızda kapat fotoğrafı linkini giriniz">
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light">About bilgisini güncelle</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>




