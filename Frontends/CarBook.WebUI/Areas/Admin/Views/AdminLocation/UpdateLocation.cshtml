@model UpdateLocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Lokasyon veri güncelleme alanı</h4>
                        <p class="card-subtitle mb-4">
                            Araçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin güncellendiği sayfadır. Bilgileri
                            eksiksiz olarak doldurun.
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="LocationId" />
                            <div class="form-group">
                                <label for="exampleInputName">Lokasyon Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Başlığı giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyon bilgisini Güncelle</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

