@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Kategorileri Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Bloglara ait kategorilerle ilgili işlemlerin gerçekleşeceği sayfadır. Kategori girişi yaparken bilgileri eksiksiz girmeye özen gösterelim.
                        </p>
                        <form method="post">
                            @for(int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].CarFeatureId" />
                                <input type="hidden" asp-for="@Model[i].FeatureName" />
                                <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input"/>
                                <label class="form-check-label" for="@Model[i].Available">@Model[i].FeatureName</label>
                                </div>
                            }
                            <button type="submit" class="btn btn-success">Değişiklikleri Kaydet</button>
                        </form>

                        

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

