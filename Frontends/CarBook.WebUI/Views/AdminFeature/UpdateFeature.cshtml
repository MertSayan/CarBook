@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç özelliği güncelleme sayfasıı</h4>
                        <p class="card-subtitle mb-4">
                            Araç ile ilgili özellikleri aşağıdaki kutucupa girebilirsiniz .Veri girişinden
                            sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.
                        </p>

                        <form method="post">

                            <div class="form-group">
                                <input type="hidden" asp-for="FeatureId"/>
                                <label for="exampleInputName">Özellik</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Özellik adı girişi yapınız">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Özellik Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


