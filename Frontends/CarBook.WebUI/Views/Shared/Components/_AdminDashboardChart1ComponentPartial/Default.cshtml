 <script src="~/chart.js"></script>
<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Yıllık kiralama sayıları</h4>
            
            <div style="height: 260px;">
                <canvas id="my1Chart" height="220"></canvas>
                <script>
                    var values = document.getElementById('my1Chart').getContext('2d');
                    var myChart = new Chart(values, {
                        type: 'line',  // Düzeltilmiş
                        data: {
                            labels: ['2019', '2020', '2021', '2022', '2023'],
                            datasets: [{
                                label: 'Yıllık kiralama sayıları',
                                data: [285, 180, 150, 390, 300],
                                borderColor: 'rgba(75,192,192,1)',  // Düzeltilmiş
                                borderWidth: 1  // Düzeltilmiş
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                </script>
            </div>

            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>367.850 tl</h4>
                    <p class="text-muted mb-0">Son 1 aylık ciro</p>
                </div>
                <div class="col-6">
                    <h4>22</h4>
                    <p class="text-muted mb-0">Anlık kiralık araç</p>
                </div>
            </div>
        </div>
    </div>
</div>
